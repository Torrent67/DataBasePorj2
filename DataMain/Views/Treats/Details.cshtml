@{
  Layout = "_Layout";
}

@model DataBase.Models.Treat

<h2>Product Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Flavors.Count == 0)
{
  <p>This treat does not have any registered flavors</p>
}
else
{
  <h4>Flavors the treat belongs to:</h4>
   <ul>
  @foreach(var join in Model.Flavors)
  {
    <li>@join.Flavor.Description</li>
    @using (Html.BeginForm("Delete Flavor", "Items"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Item", "Edit", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Delete Item", "Delete", new { id = Model.TreatId })</p>