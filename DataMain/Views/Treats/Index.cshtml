@{
  Layout = "_Layout";
}

@using DataBase.Models;
@model List<DataBase.Models.Treat>;

<h1>All Products:</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added.</h3>
} 


  @foreach (Treat product in Model)
{
  <li>@Html.ActionLink($"{product.Name}", "Details", new { id = product.TreatId})</li>
}


<p>@Html.ActionLink("Add a new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>