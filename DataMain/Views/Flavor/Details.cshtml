@{
  Layout = "_Layout";
}

@model DataBase.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>

@if(@Model.Treats.Count == 0)
{
  <p>This flavor was not added to any Treats</p>
}
else
{
  <h4>Treats with this Flavor</h4>
  <ul>
  @foreach(var join in Model.Treats)
  {
    <li>@join.Treat.Name</li>
    @using (Html.BeginForm("DeleteTreat", "Flavors"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul> 
}

<p>@Html.ActionLink("Back to the list", "Index")</p>
<p>@Html.ActionLink("Edit this Flavor", "Edit", new { id = Model.FlavorId })</p>

<p>@Html.ActionLink("Delete this Flavor", "Delete", new { id = Model.FlavorId })</p>